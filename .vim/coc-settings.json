{
	"languageserver": {
		"cmake": {
			"command": "cmake-language-server",
			"filetypes": ["cmake"],
			"rootPatterns": [
				"build/"
			],
			"initializationOptions": {
				"buildDirectory": "build"
			}
		}
	},
  "clangd.semanticHighlighting": true,
  "cSpell.userWords": [
    "eigen",
    "nolint",
    "quaternion",
    "raytracer",
	"repr",
	"rustfmt",
	"orobix",
	"aigo"
  ]
}
